<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment android:name="gov.wa.wsdot.android.wsdot.ui.DashboardFragment"
        android:id="@+id/fragment_dashboard"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <fragment android:name="gov.wa.wsdot.android.wsdot.ui.WhatsHappeningFragment"
        android:id="@+id/fragment_now_playing"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/whats_happening_height" />

</LinearLayout>