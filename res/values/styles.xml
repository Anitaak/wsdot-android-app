<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="Text">
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/semi_white</item>
    </style>

    <style name="Text.Description">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.Light">
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="Text.Description.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailsListView" parent="@android:style/Widget.ListView.White">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>
    </style>

    <style name="DetailsEmpty">
        <item name="android:padding">20dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>    
    
    <!-- What's Happening section in Home activity -->

    <style name="WhatsHappeningItemBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/whats_happening_item_padding</item>
        <item name="android:paddingRight">@dimen/whats_happening_item_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhatsHappeningStaticItem" parent="style/WhatsHappeningItemBase">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:maxLines">2</item>
    </style>
 
